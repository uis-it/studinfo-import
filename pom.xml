				<defaultGoal>org.codehaus.mojo:exec-maven-plugin:1.2:java</defaultGoal>
				<plugins>
					<plugin>
						<groupId>org.codehaus.mojo</groupId>
						<artifactId>exec-maven-plugin</artifactId>
						<version>1.2</version>
						<configuration>
							<mainClass>no.uis.service.fsimport.util.DBImportUtil</mainClass>
							<classpathScope>test</classpathScope>
							<arguments>
								<argument>-c${javamojo.driver}</argument>
								<argument>-d${javamojo.dialect}</argument>
								<argument>-m${javamojo.mode}</argument>
