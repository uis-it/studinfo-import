			           <artifactId>solr</artifactId>
			           <version>3.6.0</version>
			           <type>war</type>
			          </artifactItem>
			       </artifactItems>
			       <stripVersion>true</stripVersion>
			     </configuration>
			   </execution>
			 </executions>
			</plugin>			
