	<build>
		<plugins>
			<plugin>
				<groupId>org.jvnet.hyperjaxb3</groupId>
				<artifactId>maven-hyperjaxb3-plugin</artifactId>
				<version>${hyperjaxb3.version}</version>
				<executions>
					<execution>
						<id>generate-sources</id>
						<phase>generate-sources</phase>
						<goals>
							<goal>generate</goal>
						</goals>
						<configuration>
							<schemaDirectory>${basedir}/src/main/resources</schemaDirectory>
							<bindingDirectory>${basedir}/src/main/resources</bindingDirectory>
							<generatePackage>no.uis.service.studinfo.data</generatePackage>
							<!--packagename>no.uis.service.studinfo.data</packagename-->
							<!--generateDirectory>${basedir}/target/generated-sources/person</generateDirectory-->
							<extension>true</extension>
							<verbose>true</verbose>
							<removeOldOutput>true</removeOldOutput>
						</configuration>
					</execution>
				</executions>
			</plugin>			
		</plugins>
	</build>
	
